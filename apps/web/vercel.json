{
  "framework": "nextjs",
  "installCommand": "pwd && ls -la .. && ls -la ../.. && cd ../.. && pnpm install --frozen-lockfile",
  "buildCommand": "cd ../.. && pnpm --filter ./apps/web build",
  "outputDirectory": ".next",
  "regions": [
    "iad1"
  ],
  "env": {
    "NEXT_PUBLIC_APP_URL": "https://trailwright.vercel.app",
    "NEXT_PUBLIC_DEMO_MODE": "true"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "origin-when-cross-origin"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/app/trips",
      "permanent": false,
      "has": [
        {
          "type": "cookie",
          "key": "sb-access-token"
        }
      ]
    }
  ]
}