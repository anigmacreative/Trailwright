{
  "name": "trailwright",
  "version": "0.1.0",
  "private": true,
  "description": "Adventure-minimal trip planner for small groups",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "pnpm -C apps/web dev",
    "dev:web": "pnpm -C apps/web dev",
    "dev:web:3000": "PORT=3000 pnpm -C apps/web dev",
    "dev:api": "cd apps/api && uvicorn main:app --reload --port 8000",
    "dev:all": "concurrently \"pnpm dev:web\" \"pnpm dev:api\"",
    "install:clean": "rm -rf node_modules pnpm-lock.yaml && pnpm install",
    "kill3000:mac": "lsof -ti :3000 | xargs -r kill -9",
    "kill3000:win": "for /f \"tokens=5\" %a in ('netstat -ano ^| findstr :3000') do taskkill /PID %a /F",
    "lint": "turbo lint",
    "lint:web": "pnpm --filter ./apps/web run lint",
    "test": "turbo test",
    "test:unit": "pnpm --filter ./apps/web run test:unit",
    "test:api": "cd apps/api && python -m pytest",
    "test:integration": "pnpm --filter ./apps/web run test:integration",
    "e2e": "pnpm --filter ./apps/web run test:e2e",
    "e2e:headed": "pnpm --filter ./apps/web run test:e2e:headed",
    "typecheck": "turbo typecheck",
    "typecheck:web": "pnpm --filter ./apps/web run typecheck",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "db:generate": "cd apps/web && pnpm db:generate",
    "db:push": "cd apps/web && pnpm db:push",
    "db:seed": "cd infra && tsx seed.ts",
    "check": "pnpm typecheck && pnpm lint && pnpm test",
    "check:ci": "pnpm install --frozen-lockfile && pnpm check",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@supabase/supabase-js": "^2.38.5",
    "@types/node": "^20.10.5",
    "concurrently": "^8.2.2",
    "dotenv": "^17.2.1",
    "husky": "^8.0.3",
    "next": "^14.0.4",
    "prettier": "^3.1.1",
    "tsx": "^4.20.4",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@9.12.3"
}